<Page
    x:Class="UIEditor.OpenGLUserCOntrol"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UIEditor"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid MinWidth="768" MinHeight="1024" Background="DarkBlue">
        <SwapChainPanel x:Name="swapChainPanel"  Width="Auto" Height="Auto" PointerMoved="swapChainPanel_PointerMoved"  PointerPressed="swapChainPanel_PointerPressed"  PointerReleased="swapChainPanel_PointerReleased"  PointerWheelChanged="swapChainPanel_PointerWheelChanged" SizeChanged="swapChainPanel_SizeChanged">
        </SwapChainPanel>
    </Grid>
</Page>
