<UserControl x:Class="CoreWPF.Common.XYZNumeric"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:cust="clr-namespace:CoreWPF.Common">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <cust:NumericUpDown Grid.Row="0" x:Name="m_X_numericUpDown" x:FieldModifier="public"/>
        <cust:NumericUpDown Grid.Row="1" x:Name="m_Y_numericUpDown" x:FieldModifier="public"/>
        <cust:NumericUpDown Grid.Row="2" x:Name="m_Z_numericUpDown" x:FieldModifier="public"/>
    </Grid>
</UserControl>